{
  "manifest_version": 2,
  "name": "Smart Max Tabs (Web Extension)",
  "short_name": "Smart Max Tabs",
  "version": "0.1.0",
  "description": "Automatically close least used tabs, and retrieve them whence needed",
  "default_locale": "en",
  "icons": {
    "48": "icons/icon-48.png"
  },
  "author": "Yahya Badran",
  "homepage_url": "https://github.com/badranX/smart-max-tabs",
  "incognito": "spanning",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "sidebar_action": {
    "default_title": "closed tabs",
    "default_panel": "sidebar.html",
    "open_at_install": false
  },
  "options_ui": {
    "page": "options/options.html",
    "browser_style": true
  },
  "browser_action": {
    "browser_style": true,
    "default_icon": "icons/icon.svg",
    "default_title": "Smart Max Tabs"
  },
  "permissions": [
    "notifications",
    "storage",
    "theme",
    "activeTab",
    "tabs"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "techtweaking@gmail.com"
    }
  }
}
