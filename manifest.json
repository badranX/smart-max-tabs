{
  "manifest_version": 2,
  "name": "Max Tabs (Web Extension)",
  "short_name": "Max Tabs",
  "version": "0.1.0",
  "description": "Max tab and ...TODO",
  "default_locale": "en",
  "icons": {
    "48": "icons/icon-48.png"
  },
  "author": "Yahya Badran",
  "homepage_url": "https://github.com/kanru/max-tabs",
  "incognito": "spanning",
  "background": {
    "scripts": [
      "lib/chroma.js",
      "background.js"
    ],
    "persistent": false
  },
  "sidebar_action": {
    "default_title": "closed tabs",
    "default_panel": "sidebar.html",
    "open_at_install": false
  },
  "options_ui": {
    "page": "options/options.html",
    "browser_style": true
  },
  "browser_action": {
    "browser_style": true,
    "default_icon": "icons/icon.svg",
    "default_title": "Max Tabs"
  },
  "permissions": [
    "notifications",
    "storage",
    "theme",
    "activeTab",
    "tabs"
  ]
}